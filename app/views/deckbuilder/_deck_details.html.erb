<%= form_for(@deck, :url => {:controller => "deckbuilder", :action => "save_deck"}, :live_validations => true, :remote => true) do |f| %>
	<%= f.error_messages %>
	<p>
    <%= f.label :title %>
    <%= f.text_field :title, :size => 33 %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :cols => 29 %>
  </p>
	<div class="decklist_button">
    <%= f.submit 'Save', :class => "button" %>
  </div>
<% end %>
<div class="decklist_button">
	<%= form_tag :url => { :controller => "deckbuilder", :action => "clear_decklist" }, :remote => true do %>
		<%= submit_tag "Clear" , :class => "button" %>
	<% end %>
</div>