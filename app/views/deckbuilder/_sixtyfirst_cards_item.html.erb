<% if sixtyfirst_cards_item == @current_item %>
 <div id="current_item" class="decklist_item">
<% else %>
 <div class="decklist_item">
<% end %>

<%= link_to_remote image_tag("/images/arrow_left.png"), :url => {:controller => "deckbuilder", :action => "move_between_tabs", :card_id => sixtyfirst_cards_item.card.id, :destination => "main_deck" } -%>
<%= link_to_remote image_tag("/images/filters_delete.png"), :url => {:controller => "deckbuilder", :action => "remove_from_decklist", :id => sixtyfirst_cards_item.card.id } -%>

<%= text_field_tag sixtyfirst_cards_item.id, sixtyfirst_cards_item.quantity, :size => 2, :maxlength => 2,
		:onchange => "$.post('/deckbuilder/change_deck_item_quantity', { 
									card_id: #{sixtyfirst_cards_item.card.id.to_s},
									quantity: $(this).val()
								});" %>

<span class="decklist_item_title">
	<%= sixtyfirst_cards_item.card.shortened_title(24) %>
</span>

</div>