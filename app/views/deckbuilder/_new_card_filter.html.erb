<div class="card_filter_box" id="new_card_filter">
	<h3>Create New Filter</h3>
  
  <% remote_form_for @card_filter = CardFilter.new(:name => "untitled filter"), :url => { :controller => "deckbuilder", :action => "create_card_filter" } do |f| %>
    <p>
      <label>Name this filter: </label>
      <%= f.text_field :name, :autocomplete =>"off" %>
    </p>
    
    <div class="card_filter_items" id="new_card_filter_items">
			<%= render :partial => 'card_filter_item', :object => CardFilterItem.new %>	
      <%= render :partial => 'card_filter_item', :collection => @card_filter.card_filter_items %>
    </div>
    
    <p>
      <%= link_to_remote "Add New Criteria", :url => {:controller => "deckbuilder", :action => "add_new_criteria"} %>
    </p>
    
    <p>
      <%= f.submit "Save", :class => "button" %>
    </p>
  <% end %>

</div>